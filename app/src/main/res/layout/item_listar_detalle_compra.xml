<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <ImageView
        android:id="@+id/iv_detalle_compra"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_detalle_compra_nom_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="NOMBRE PRODUCTO"
        android:textSize="16dp"
        android:textColor="@color/colorTextButton"
        app:layout_constraintLeft_toRightOf="@+id/iv_detalle_compra"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_detalle_compra_cant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Cantidad Producto"
        android:textSize="14dp"
        android:textColor="@color/colorTextButton"
        app:layout_constraintLeft_toRightOf="@+id/iv_detalle_compra"
        app:layout_constraintTop_toBottomOf="@+id/tv_detalle_compra_nom_pro" />

    <TextView
        android:id="@+id/tv_detalle_compra_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRECIO PRODUCTO"
        android:textSize="14dp"
        android:textColor="@color/colorTextButton"
        tools:layout_editor_absoluteY="60dp"
        tools:layout_editor_absoluteX="116dp" />
</android.support.constraint.ConstraintLayout>