<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cl.labs.steinnx.sanguchote.view.fragments.ListarProductos_Fragment">
    <TextView
        android:id="@+id/tv_listar_productos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listado Productos"
        android:textColor="@color/colorTextButton"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_frag_listar_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/tv_listar_productos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
