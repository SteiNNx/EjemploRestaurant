<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="150dp">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/iv_list_pro_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:text="NOMBRE PRODUCTO"
        android:layout_width="0dp"
        android:textSize="18dp"
        android:textColor="@color/colorTextButton"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_list_pro_nombre_pro"
        app:layout_constraintLeft_toRightOf="@+id/iv_list_pro_logo"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:text="STOCK PRODUCTO"
        android:textSize="16dp"
        android:textColor="@color/colorTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_list_pro_stock"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_list_pro_nombre_pro"
        app:layout_constraintLeft_toRightOf="@+id/iv_list_pro_logo" />

    <TextView
        android:text="PRECIO PRODUCTO"
        android:textSize="16dp"
        android:textColor="@color/colorTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_list_pro_precio"
        app:layout_constraintLeft_toRightOf="@+id/iv_list_pro_logo"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_list_pro_stock" />
</android.support.constraint.ConstraintLayout>