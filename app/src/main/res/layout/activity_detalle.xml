<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="cl.labs.steinnx.sanguchote.view.activities.DetalleActivity">

    <TextView
        android:text="ID COMPRA"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:textColor="@color/colorTextButton"
        android:id="@+id/tv_detalle_act_id_compr" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_det_compr_activ"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/tv_detalle_act_id_compr"
        android:layout_alignParentStart="true" />
</RelativeLayout>
